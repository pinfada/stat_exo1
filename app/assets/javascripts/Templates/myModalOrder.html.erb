<div class="modal-header">
	<h3 class="modal-title" id="modal-title">PRODUCTS</h3>
</div>
<div class="modal-body" id="modal-body">
<div class="container">
	<div class="row" ng-switch="nbproduit">
		<div ng-switch-when="0">
			<div>
			  <strong>Désolé!</strong> Ce commerce n'a pas de produit en stock
			</div>
		</div>
		<div ng-switch-default>
			<div class="row">
				<div ng-repeat="produit in produits">
				<!--
				<div class="col-md-3 col-sm-4 col-xs-6">
					<div class="dummy"></div>
					<a href="#x" class="thumbnail purple">{{produit.name}}</a>
				</div>
				-->

					<div class="col-md-4">
						<figure class="card card-product">
							<%= image_tag "ava1.png", class:"img-wrap" %>
							<figcaption class="info-wrap">
									<h4 class="title">{{produit.name}}</h4>
									<p class="desc">Some small description goes here</p>
									<div class="rating-wrap">
										<div class="label-rating">132 reviews</div>
										<div class="label-rating">154 orders </div>
									</div> <!-- rating-wrap.// -->
							</figcaption>
							<div class="bottom-wrap">
								<a href="" class="btn btn-sm btn-primary pull-right">Order Now</a>	
								<div class="price-wrap h5">
									<span class="price-new">{{ produit.unitprice | currency }}</span> <del class="price-old">$1980</del>
								</div> <!-- price-wrap.// -->
							</div> <!-- bottom-wrap.// -->
						</figure>
					</div> <!-- col // -->
				</div>
			</div>
		</div>
	</div>
</div>

